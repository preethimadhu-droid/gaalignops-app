# Development Environment Configuration for GA AlignOps
# This file contains development-specific settings

# Environment
GAALIGNOPS_ENV=development
GAALIGNOPS_DEBUG=true

# Database (same database, different table prefixes)
DATABASE_URL=postgresql://username:password@localhost:5432/gaalignops_dev

# Google Sheets (development sheets)
GOOGLE_SHEETS_ENABLED=true
GOOGLE_SHEETS_PRODUCTION=false
GOOGLE_SHEETS_SYNC_SCHEDULE=0 20 * * *

# OAuth (disabled in development, use fallback auth)
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Scheduler (enabled but not background)
SCHEDULER_ENABLED=true
SCHEDULER_BACKGROUND_MODE=false

# Features
ADVANCED_ANALYTICS=true
ML_FORECASTING=true
REAL_TIME_SYNC=false
PRODUCTION_DATA_PROTECTION=false

# Data Sync
DATA_SYNC_ENABLED=true
DATA_SYNC_VALIDATION=false

# Logging
LOG_LEVEL=DEBUG
LOG_TO_FILE=false

# Development-specific settings
AUTO_CREATE_DEV_TABLES=true
SYNC_PRODUCTION_DATA=true
SHOW_DEBUG_INFO=true
