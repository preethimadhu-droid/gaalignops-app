# Production Environment Configuration for GA AlignOps
# This file contains production-specific settings

# Environment
GAALIGNOPS_ENV=production
GAALIGNOPS_DEBUG=false

# Database (production database, clean table names)
DATABASE_URL=postgresql://username:password@production-host:5432/gaalignops_prod

# Google Sheets (production sheets)
GOOGLE_SHEETS_ENABLED=true
GOOGLE_SHEETS_PRODUCTION=true
GOOGLE_SHEETS_SYNC_SCHEDULE=0 20 * * *

# OAuth (enabled in production)
GOOGLE_OAUTH_ENABLED=true
GOOGLE_CLIENT_ID=your_production_client_id
GOOGLE_CLIENT_SECRET=your_production_client_secret

# Scheduler (enabled and background)
SCHEDULER_ENABLED=true
SCHEDULER_BACKGROUND_MODE=true

# Features
ADVANCED_ANALYTICS=true
ML_FORECASTING=true
REAL_TIME_SYNC=true
PRODUCTION_DATA_PROTECTION=true

# Data Sync
DATA_SYNC_ENABLED=true
DATA_SYNC_VALIDATION=true

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Production-specific settings
AUTO_CREATE_DEV_TABLES=false
SYNC_PRODUCTION_DATA=false
SHOW_DEBUG_INFO=false

# Security
SSL_REQUIRED=true
DOMAIN_RESTRICTION=greyamp.com
SESSION_TIMEOUT=3600
